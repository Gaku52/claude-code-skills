# Environment Variables Template
# .env.example - 環境変数のテンプレート（実際の値は .env に記載）

# アプリケーション設定
APP_NAME=My Application
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# サーバー設定
HOST=0.0.0.0
PORT=8000

# データベース設定
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# SQLite の場合: sqlite:///./app.db

# Redis 設定
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# セキュリティ設定
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS 設定
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# メール設定（SMTP）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@example.com

# AWS 設定
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# API キー
OPENAI_API_KEY=
STRIPE_API_KEY=
GOOGLE_API_KEY=

# 外部サービス
SENTRY_DSN=
ANALYTICS_ID=

# 開発時のみ
RELOAD=true
WORKERS=1

# プロダクション設定
# APP_ENV=production
# DEBUG=false
# LOG_LEVEL=WARNING
# RELOAD=false
# WORKERS=4
