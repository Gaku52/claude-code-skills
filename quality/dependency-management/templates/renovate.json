{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Renovate Bot Configuration Template",

  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":semanticCommits",
    ":preserveSemverRanges",
    "group:monorepos",
    "group:recommended",
    ":timezone(America/New_York)"
  ],

  "schedule": ["after 10pm every weekday", "every weekend"],

  "labels": ["dependencies", "renovate"],
  "assignees": ["@tech-lead"],
  "reviewers": ["team:developers"],

  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,

  "packageRules": [
    {
      "description": "Auto-merge patch updates after CI passes",
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "minimumReleaseAge": "3 days",
      "internalChecksFilter": "strict",
      "ignoreTests": false
    },
    {
      "description": "Auto-merge dev dependencies minor updates",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "Group React ecosystem",
      "matchPackagePatterns": ["^react", "^@types/react"],
      "groupName": "React ecosystem",
      "automerge": false
    },
    {
      "description": "Group Next.js related packages",
      "matchPackagePatterns": ["^next", "^@next"],
      "groupName": "Next.js",
      "automerge": false
    },
    {
      "description": "Group testing libraries",
      "matchPackagePatterns": [
        "^@testing-library/",
        "^jest",
        "^vitest",
        "^@vitest/"
      ],
      "groupName": "Testing libraries",
      "automerge": true
    },
    {
      "description": "Group TypeScript packages",
      "matchPackagePatterns": ["^typescript", "^@types/"],
      "groupName": "TypeScript",
      "automerge": false
    },
    {
      "description": "Separate major updates - require approval",
      "matchUpdateTypes": ["major"],
      "labels": ["major-update"],
      "automerge": false,
      "dependencyDashboardApproval": true,
      "schedule": ["on the 1st day of the month"]
    },
    {
      "description": "Security vulnerabilities - highest priority",
      "matchDatasources": ["npm"],
      "matchUpdateTypes": ["patch"],
      "vulnerabilityAlerts": {
        "enabled": true
      },
      "labels": ["security", "vulnerability"],
      "prPriority": 20,
      "automerge": true,
      "minimumReleaseAge": "0",
      "schedule": ["at any time"]
    },
    {
      "description": "Pin GitHub Actions to SHA",
      "matchManagers": ["github-actions"],
      "pinDigests": true,
      "automerge": true
    },
    {
      "description": "Disable updates for specific packages",
      "matchPackageNames": ["lodash"],
      "enabled": false
    },
    {
      "description": "Limit Docker base image updates",
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ],

  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "assignees": ["@security-team"],
    "prCreation": "immediate"
  },

  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": ["before 3am on the first day of the month"]
  },

  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore(deps):",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}",

  "prTitle": "{{{commitMessagePrefix}}} {{{commitMessageAction}}} {{{commitMessageTopic}}} {{{commitMessageExtra}}}",

  "prBodyTemplate": "{{{header}}}{{{table}}}{{{notes}}}{{{changelogs}}}{{{configDescription}}}{{{controls}}}",

  "prCreation": "not-pending",

  "rebaseWhen": "behind-base-branch",

  "platformAutomerge": true,

  "rangeStrategy": "bump",

  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "separateMinorPatch": false,

  "stabilityDays": 3,

  "postUpdateOptions": ["npmDedupe", "yarnDedupeHighest"],

  "dependencyDashboard": true,
  "dependencyDashboardTitle": "ðŸ”„ Dependency Dashboard",
  "dependencyDashboardHeader": "This dashboard shows all pending dependency updates.",
  "dependencyDashboardFooter": "Generated by Renovate Bot",

  "enabledManagers": [
    "npm",
    "dockerfile",
    "docker-compose",
    "github-actions",
    "terraform"
  ],

  "ignoreDeps": [],

  "ignorePresets": [],

  "timezone": "America/New_York",

  "onboarding": false,
  "requireConfig": false,

  "suppressNotifications": ["prIgnoreNotification"],

  "prNotPendingHours": 24,

  "automergeSchedule": ["after 10pm", "before 5am", "every weekend"],

  "gitAuthor": "Renovate Bot <bot@renovateapp.com>"
}
