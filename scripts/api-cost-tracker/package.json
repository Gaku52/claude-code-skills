{
  "name": "claude-api-cost-tracker",
  "version": "1.0.0",
  "description": "Claude API usage tracking and cost notification system",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "start:scheduler": "node dist/scheduler.js",
    "init-db": "node dist/database/init.js",
    "reset-db": "rm -f data/usage.db && npm run init-db",
    "report:daily": "node dist/reports/daily.js",
    "report:weekly": "node dist/reports/weekly.js",
    "report:monthly": "node dist/reports/monthly.js",
    "test:email": "node dist/email/test.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.29.0",
    "@aws-sdk/client-ses": "^3.693.0",
    "better-sqlite3": "^11.7.0",
    "dotenv": "^16.4.5",
    "nodemailer": "^6.9.15",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^6.4.17",
    "@types/node-cron": "^3.0.11",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
